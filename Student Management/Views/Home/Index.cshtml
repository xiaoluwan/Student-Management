@model IEnumerable<Student>

@{ 
    //Layout = null;
    ViewBag.Title = "学生详情页";
}
    <div class="card-group">
        @foreach (var student in Model) {
        <div class="card m-3">
            <div class="card-header">
                <h3>@student.Name</h3>
            </div>
            <img class="card-img-top" src="~/images/1.jpg" asp-append-version="true" />

            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="details" asp-route-id="@student.Id" class="btn btn-primary m-1'">查看</a>
                @*<a href="/home/details/@student.Id" class="btn btn-primary">查看</a>*@
                <a href="#" class="btn btn-primary m-1">编辑</a>
                <a href="#" class="btn btn-danger m-">删除</a>
            </div>
        </div>
        }
    </div>
