@model HomeDetailsViewModel

@{
    ViewBag.Title = "学生详情页";

}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card-header">
            <h1>@Model.student.Name</h1>
        </div>
        <div class="card-body text-center">
            <img class="card-img-top" src="~/images/5.jpg" />
            <h4>学生ID：@Model.student.Id</h4>
            <h4>邮箱：@Model.student.Email</h4>
            <h4>班级名称：@Model.student.ClassName</h4>

        </div>
        <div class="card-footer text-center">
            <a asp-action="index" asp-controller="Home" class="btn btn-primary">返回</a>
            <a href="#" class="btn btn-primary">编辑</a>
            <a href="#" class="btn btn-danger">删除</a>

        </div>
    </div>
</div>


<div id="main" style="width: 600px;height:400px;"></div>
<script type="text/javascript">
    // 基于准备好的dom，初始化echarts实例
    var myChart = echarts.init(document.getElementById('main'));

    // 指定图表的配置项和数据
    var option = {
        title: {
            text: 'ECharts 入门示例'
        },
        tooltip: {},
        legend: {
            data: ['销量']
        },
        xAxis: {
            data: ["衬衫", "羊毛衫", "雪纺衫", "裤子", "高跟鞋", "袜子"]
        },
        yAxis: {},
        series: [{
            name: '销量',
            type: 'bar',
            data: [5, 20, 36, 10, 10, 20]
        }]
    };

    // 使用刚指定的配置项和数据显示图表。
    myChart.setOption(option);
</script>
@section Scripts{

    <script src="~/js/CustomScript.js"></script>
}
